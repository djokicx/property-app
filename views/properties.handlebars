{{#section 'head'}}
    <link rel="stylesheet" href="/styles/auth.css">
{{/section}}

<div class="container">
  <form method="POST" action="/properties" class="form-signin">
    <h2 class="form-signin-heading">Create an account</h2>
    
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}
    
    <label for="streetNumber" class="sr-only">Street Number</label>
    <input type="text" id="inputstreetNumber" name="streetNumber" class="form-control" placeholder="EX: 123" required autofocus>

    <label for="street" class="sr-only">Street</label>
    <input type="text" id="inputStreet" name="street" class="form-control" placeholder="EX: 5th St" required autofocus>

    <label for="zipcode" class="sr-only">Zip Code</label>
    <input type="text" id="inputZipcode" name="zipcode" class="form-control" placeholder="EX: 94121" required autofocus>

    <label for="city" class="sr-only">City</label>
    <input type="text" id="inputCity" name="city" class="form-control" placeholder="EX: San Francisco" required autofocus>

    <label for="State" class="sr-only">State</label>
    <input type="text" id="inputState" name="state" class="form-control" placeholder="EX: CA" required autofocus>

    <label for="country" class="sr-only">Country</label>
    <input type="password" id="inputCountry" name="country" class="form-control" placeholder="EX: USA" required>

    <label for="bedrooms" class="sr-only">Number of Bedrooms</label>
    <input type="password" id="inputBedrooms" name="bedrooms" class="form-control" placeholder="Number of Bedrooms" required>

    <label for="bathrooms" class="sr-only">Number of Bathrooms</label>
    <input type="password" id="inputBathrooms" name="bathrooms" class="form-control" placeholder="Number of Bathrooms" required>

    <label for="parking" class="sr-only">Number of Parking Spaces</label>
    <input type="password" id="inputParking" name="parking" class="form-control" placeholder="Number of Parking Spaces" required>

    <label for="squareFootage" class="sr-only">Total Square Footage</label>
    <input type="password" id="inputSquareFootage" name="squareFootage" class="form-control" placeholder="Total Square Footage" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Create Property/button>
  </form>
</div>